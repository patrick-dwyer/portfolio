<%- include('partials/header'); -%>



<!-- Completed Projects Button -->
<div class="p-5 m-5">
    <h1>Completed Projects</h1>
</div>
  
    <div class="container-fluid ">
      <div class="row gx-2 gy-4">

        <!-- Loop through all completed projects to make Bootstrap Card per project -->
        <% completedProjects.forEach(function(project) { %>
          <div class="col mx-auto">
            <div class="card" style="width: 15rem">
              <a href=<%- project.projectURL %> target="_blank" rel="noreferrer noopener"><img src=<%- project.imgFile %> class="card-img-top" alt=<%- project.imgFileAlt %>></a>
              <div class="card-body">
                <h5 class="card-title"><%- project.title %> </h5>
                <p class="card-text"> <%- project.shortDescription %></p>
                <a href=<%-project.projectURL%> class="btn btn-outline-dark m-2" target="_blank" rel="noreferrer noopener">View Project</a>
                <a href="/projects/<%= project.title %>" class="btn btn-outline-dark">More information</a>
              </div>
            </div>
          </div>
          <% }); %>

      </div> 
    </div>




<%- include('partials/footer'); -%>